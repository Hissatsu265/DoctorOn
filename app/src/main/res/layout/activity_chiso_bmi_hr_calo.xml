<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_50"
    tools:context=".Activities.Chiso_bmi_hr_calo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardElevation="18dp"
        >
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/primary"/>
            <androidx.appcompat.widget.Toolbar
                android:layout_weight="1"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                app:title="Chỉ số"
                app:titleMarginStart="20dp"
                android:elevation="4dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tháng"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/month"
                    android:layout_marginStart="8dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/btn_kt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="270dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="390dp"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp"
                        >
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="390dp"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp"
                        >
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_bmi99"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="390dp"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp"
                        >
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_calo99"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bảng chỉ số theo tháng"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="270dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="390dp"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp"
                        >
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chartTB"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="390dp"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp"
                        >
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_bmi99TB"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="390dp"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="12dp"
                        >
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_calo99TB"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bảng chỉ số theo năm"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/cyan_300"
                    android:layout_marginStart="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉ số BMI"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginStart="8dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/purple_500"
                    android:layout_marginStart="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginStart="8dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/primaryContainer"
                    android:layout_marginStart="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhịp tim"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginStart="8dp"
                    />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chỉ số trung bình tháng"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_8pxh"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_8pxh">
                        <ImageView
                            android:layout_marginStart="30dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_help1"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/chisotb_bmi"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_marginEnd="@dimen/_8pxh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="21.65"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_8pxh">
                        <ImageView
                            android:layout_marginStart="30dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_calories"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/chisotb_calo"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_marginEnd="@dimen/_8pxh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2100.65"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_8pxh">
                        <ImageView
                            android:layout_marginStart="30dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_favorite"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/chisotb_hr"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_marginEnd="@dimen/_8pxh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="87.65"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cập nhập chỉ số hôm nay của bạn"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_8pxh"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_8pxh">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_help1"
                            android:scaleType="fitXY"
                            />
                        <EditText
                            android:id="@+id/update_bmi"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_marginEnd="@dimen/_8pxh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Chỉ số BMI"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_8pxh">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_calories"
                            android:scaleType="fitXY"
                            />
                        <EditText
                            android:id="@+id/update_calo"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_marginEnd="@dimen/_8pxh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Calories"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/_8pxh">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_favorite"
                            android:scaleType="fitXY"
                            />
                        <EditText
                            android:id="@+id/update_hr"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_marginEnd="@dimen/_8pxh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Nhịp tim"
                            />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cập nhập"
                        android:backgroundTint="@color/cyan_300"
                        android:textColor="@color/primary"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8pxh"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>