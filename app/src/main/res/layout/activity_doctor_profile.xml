<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Doctor_Profile">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/primary"/>
            <androidx.appcompat.widget.Toolbar
                android:layout_weight="1"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                app:title="Profile"
                app:titleMarginStart="20dp"
                android:elevation="4dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/img_profile_pic_1"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginTop="@dimen/_8pxh"
                    android:layout_marginBottom="@dimen/_8pxh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/tv_CN"
                    android:layout_marginBottom="@dimen/_8pxh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chuyên ngành"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/tv_bv"
                    android:layout_marginBottom="@dimen/_8pxh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="benh vien"/>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_star"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_margin="@dimen/_10pxh"/>
            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mô tả vể bản thân tôi đã có 10 năm kinh niên trong nghề hiện 30 tuổi chưa có ca nào là tôi không chữa được..."
                android:layout_marginBottom="@dimen/_15pxh"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:textSize="18dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
              />
            <LinearLayout
                android:id="@+id/week"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"

                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_mon"
                        android:text="2"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_Tue"
                        android:text="3"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_wed"
                        android:text="4"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_Thu"
                        android:text="5"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
<!--                <androidx.cardview.widget.CardView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_margin="5dp"-->
<!--                    android:layout_height="70dp"-->
<!--                    android:layout_weight="1"-->
<!--                    app:cardCornerRadius="@dimen/_8pxh"-->
<!--                    app:cardElevation="@dimen/_8pxh">-->
<!--                    <Button-->
<!--                        android:textSize="18dp"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:id="@+id/btn_Fri"-->
<!--                        android:text="6"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textColor="@color/black"/>-->
<!--                </androidx.cardview.widget.CardView>-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_Fri"
                        android:text="6"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8:00 AM"
                        android:id="@+id/hour_8am"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/hour_9am"
                        android:text="9:00 AM"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="10:00 AM"
                        android:id="@+id/hour_10am"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1:00 PM"
                        android:id="@+id/hour_1pm"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/hour_2pm"
                        android:text="2:00 PM"

                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3:00 PM"
                        android:id="@+id/hour_3pm"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4:00 PM"
                        android:id="@+id/hour_4pm"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="5:00 PM"
                        android:id="@+id/hour_5pm"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_8pxh"
                    app:cardElevation="@dimen/_8pxh">
                    <Button
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6:00 PM"
                        android:id="@+id/hour_6pm"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal"
       >
        <ImageButton
            android:id="@+id/btnChat"
            android:layout_marginStart="12dp"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_user_cyan_300"
            android:backgroundTint="@color/primary"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_booking"
            android:text="Đặt lịch hẹn"
            android:background="@drawable/rectangle_border_name_primary_radius_8"
            android:backgroundTint="@color/teal_200"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:textColor="@color/primary"
            />
    </LinearLayout>
</LinearLayout>