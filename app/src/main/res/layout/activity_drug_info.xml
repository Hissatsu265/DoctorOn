<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Drug_info"
    android:background="@color/teal_200"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/primary"/>
            <androidx.appcompat.widget.Toolbar
                android:layout_weight="1"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                app:title="Thông tin thuốc"
                app:titleMarginStart="20dp"
                android:elevation="4dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="16dp">
            <ImageView
                android:id="@+id/image_drug"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_upload"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <ScrollView
        android:paddingTop="30dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/round_topconner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên thuốc"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                />
            <TextView
                android:id="@+id/name_drug"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên của loại thuốc..."
                android:textSize="18dp"
                android:fontFamily="@font/font2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặc trị"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"

                />
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="18dp"
                android:id="@+id/dactri_drug"
                android:fontFamily="@font/font2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành phần"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                />
            <TextView
                android:id="@+id/tp_drug"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="18dp"
                android:fontFamily="@font/font2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cách sử dụng"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"

                />
            <TextView
                android:id="@+id/use_drug"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="18dp"
                android:fontFamily="@font/font2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chống chỉ định"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                />
            <TextView
                android:id="@+id/chongchidinh_drug"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="18dp"
                android:fontFamily="@font/font2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác dụng phụ"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                />
            <TextView
                android:id="@+id/tdphu_drug"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="18dp"
                android:fontFamily="@font/font2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá thị trường"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                />
            <TextView
                android:id="@+id/price_drug"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="18dp"
                android:fontFamily="@font/font2"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>