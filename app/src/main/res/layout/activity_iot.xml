<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.iot"
    android:orientation="vertical"
    android:background="@color/primary">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/primary"/>
            <androidx.appcompat.widget.Toolbar
                android:layout_weight="1"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                app:title="Thiết bị theo dõi sức khỏe"
                app:titleMarginStart="20dp"
                android:elevation="4dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đo nhịp tim"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:fontFamily="@font/font7"/>
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="300dp"
        app:cardCornerRadius="200dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/teal_50">
        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_gravity="center"
            android:layout_height="220dp"
            app:cardCornerRadius="200dp"
            app:cardBackgroundColor="@color/cyan_100">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="..."
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:gravity="center|end"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="bpm"
                        android:layout_marginStart="8dp"
                        android:gravity="center|start|bottom"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="50dp"
                        android:src="@drawable/img_television"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Đo nhịp tim mỗi ngày để chúng tôi có thể theo dõi sức khỏe của bạn tốt hơn nhé!"
        android:gravity="center"
        android:textSize="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_bg_name_primary_radius_8"
            android:backgroundTint="@color/teal_200">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1230"
                android:textStyle="bold"
                android:textSize="20dp"

                android:gravity="center|end"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="20dp"
                android:src="@drawable/img_settings"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border_name_primary_radius_8"
            android:backgroundTint="@color/cyan_100">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1230"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center|end"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="20dp"
                android:src="@drawable/img_settings"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Hãy kết nối tới thiết bị của chúng tôi để có thể đo nhịp tim và theo dõi sức khỏe"
        android:gravity="center"
        android:textSize="16dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="kết nối đến thiết bị"
        android:textColor="@color/primary"
        android:backgroundTint="@color/teal_200"
        />

</LinearLayout>