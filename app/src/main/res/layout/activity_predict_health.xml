<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background10"
    tools:context=".Activities.Predict_health">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/primary"/>
            <androidx.appcompat.widget.Toolbar
                android:layout_weight="1"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                app:title="Dự đoán sức khỏe"
                app:titleMarginStart="20dp"
                android:elevation="4dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp">
                <Button
                    android:fontFamily="@font/font7"
                    android:background="@drawable/rectangle_border_name_primary_radius_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dự đoán bênh tiểu đường"
                    android:textColor="@color/cyan_300"
                    android:textSize="30dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp">
                <Button
                    android:fontFamily="@font/font7"
                    android:background="@drawable/rectangle_border_name_primary_radius_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dự đoán bênh tim mạch"
                    android:textColor="@color/cyan_300"
                    android:textSize="30dp"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/font7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuổi của bạn"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"/>
                <EditText
                    android:background="@drawable/rectangle_bg_name_primary_border_name_blue_50_radius_5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    />
                <TextView
                    android:fontFamily="@font/font7"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huyết áp của bạn (mmHg)"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"/>
                <EditText
                    android:background="@drawable/rectangle_bg_name_primary_border_name_blue_50_radius_5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:fontFamily="@font/font7"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cholesterol (mg/dl)"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"/>
                <EditText
                    android:background="@drawable/rectangle_bg_name_primary_border_name_blue_50_radius_5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:fontFamily="@font/font7"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhịp tim tối đa"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"/>
                <EditText
                    android:background="@drawable/rectangle_bg_name_primary_border_name_blue_50_radius_5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:fontFamily="@font/font7"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:fontFamily="@font/font7"
                        android:textSize="24dp"/>
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        android:fontFamily="@font/font7"
                        android:textSize="24dp"/>
                </LinearLayout>
                <TextView
                    android:fontFamily="@font/font7"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kết quả điện tâm đồ lúc nghỉ"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bình thường"
                        android:fontFamily="@font/font7"
                        android:textSize="24dp"/>
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bất thường"
                        android:fontFamily="@font/font7"
                        android:textSize="24dp"/>
                </LinearLayout>

                <TextView
                    android:fontFamily="@font/font7"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tập thể dục có đau ngưc không"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Có"
                        android:fontFamily="@font/font7"
                        android:textSize="24dp"/>
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Không"
                        android:fontFamily="@font/font7"
                        android:textSize="24dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>