<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Xray_predict"
    android:background="@color/teal_50"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/primary"/>
            <androidx.appcompat.widget.Toolbar
                android:layout_weight="1"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                app:title="Dự đoán sức khỏe"
                app:titleMarginStart="20dp"
                android:elevation="4dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="12dp">
        <LinearLayout

            android:padding="5dp"
            android:layout_width="wrap_content"
            android:background="@color/cyan_300"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/upload_anh"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_upload" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy tải ảnh xray lồng ngực của bạn lên để mình có thể dự đoán xem bạn có bị bệnh viêm phổi không nhé!"
        android:layout_margin="20dp"
        android:textSize="15dp"
        android:fontFamily="@font/font7"
        android:textAlignment="center"
        />
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="12dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Dự đoán"
            android:textColor="@color/cyan_300"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>