<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AccountFragment">
    <LinearLayout
        android:paddingTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/teal_200">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_avatar">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/user_avatar"
            android:scaleType="fitXY"
            android:src="@drawable/img_camera"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_name_account"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_settings"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="756 cal"
                    android:layout_gravity="center"
                    android:textColor="@color/primary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_television"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhịp Tim"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90 bpm"
                    android:layout_gravity="center"
                    android:textColor="@color/primary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_thumbs_up"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.04"
                    android:layout_gravity="center"
                    android:textColor="@color/primary"/>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_topconner">
            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/_8pxh"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_height="45dp"
                        android:layout_width="45dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_help"
                        android:layout_marginStart="40dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Trợ giúp"
                        android:layout_marginStart="30dp"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_8pxh">
                    <ImageView
                        android:layout_height="45dp"
                        android:layout_width="45dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_lock_teal"
                        android:layout_marginStart="40dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Đổi mật khẩu"
                        android:layout_marginStart="30dp"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_8pxh">
                    <ImageView
                        android:layout_height="45dp"
                        android:layout_width="45dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_favorite"
                        android:layout_marginStart="40dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chỉ số"
                        android:layout_marginStart="30dp"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_8pxh">
                    <ImageView
                        android:layout_height="45dp"
                        android:layout_width="45dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_predict"
                        android:layout_marginStart="40dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dự đoán sức khỏe"
                        android:layout_marginStart="30dp"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>