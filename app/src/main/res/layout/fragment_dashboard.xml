<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Fragments.DashboardFragment">
    <LinearLayout android:id="@+id/linearLearnMore"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/primary"
        >
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false"
            android:fillViewport="true"
            android:gravity="center_horizontal"
            android:id="@+id/scrollViewScrollView"
            android:layout_height="0dp" android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearDashboard"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    >
                    <TextView android:id="@+id/txtFindYourDesire"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Chào buổi chiều! \nLê Minh Toàn"
                        android:textSize="25dp"
                        android:fontFamily="@font/font1"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_26pxh"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/teal_200"
                        android:paddingBottom="0dp"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="75dp"
                        android:background="@drawable/gradient_color"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arc_4" />
                </RelativeLayout>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearOfferBanner"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="@dimen/_10pxh"
                    android:background="@drawable/gradient_color"
                    >
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="@dimen/_10pxh"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="8dp"
                            >
                            <com.denzcoskun.imageslider.ImageSlider
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/imageSlider"
                                app:iss_auto_cycle="true"
                                app:iss_period="1999"
                                app:iss_delay="1999"
                                app:iss_corner_radius="20"
                                app:iss_title_background="@drawable/gradient"
                                />
                        </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_bottom"
                    >
                    <TextView
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cập nhập các chỉ số hàng ngày để theo dõi sức khoẻ của bạn tốt hơn!"
                        android:textStyle="bold"
                        android:fontFamily="@font/font2"
                        android:textSize="20dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tìm hiều thêm"
                        android:textColor="@color/cyan_300"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="15dp"
                        android:textSize="15dp"
                        />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_18pxv"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tính năng nổi bật"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">
                        <TableRow
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            android:gravity="center"
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="100dp"
                                android:orientation="vertical"
                                android:background="@drawable/khungbaoquanh">
                                <ImageButton
                                    android:backgroundTint="@color/primary"
                                    android:id="@+id/button4"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_button1"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gọi cho bác sĩ"
                                    android:layout_gravity="center"
                                    android:paddingBottom="8dp"
                                    />
                            </LinearLayout>
                            <LinearLayout

                                android:layout_height="wrap_content"
                                android:layout_width="100dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:orientation="vertical"
                                android:background="@drawable/khungbaoquanh">
                                <ImageButton
                                    android:backgroundTint="@color/primary"
                                    android:id="@+id/button5"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_news"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="News"
                                    android:layout_gravity="center"
                                    android:paddingBottom="8dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="100dp"
                                android:orientation="vertical"
                                android:background="@drawable/khungbaoquanh">
                                <ImageButton
                                    android:backgroundTint="@color/primary"
                                    android:id="@+id/button6"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_ai"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dự đoán"
                                    android:layout_gravity="center"
                                    android:paddingBottom="8dp"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="100dp"
                                android:orientation="vertical"
                                android:background="@drawable/khungbaoquanh">
                                <ImageButton
                                    android:backgroundTint="@color/primary"
                                    android:id="@+id/button1"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_medicine"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thuốc"
                                    android:layout_gravity="center"
                                    android:paddingBottom="8dp"
                                    />
                            </LinearLayout>
                            <LinearLayout

                                android:layout_height="wrap_content"
                                android:layout_width="100dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:orientation="vertical"
                                android:background="@drawable/khungbaoquanh">
                                <ImageButton
                                    android:backgroundTint="@color/primary"
                                    android:id="@+id/button2"
                                    android:layout_width="95dp"
                                    android:layout_height="90dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_xray_icon"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Xray"
                                    android:layout_gravity="center"
                                    android:paddingBottom="8dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="100dp"
                                android:orientation="vertical"
                                android:background="@drawable/khungbaoquanh">
                                <ImageButton
                                    android:backgroundTint="@color/primary"
                                    android:id="@+id/button3"
                                    android:layout_width="95dp"
                                    android:layout_height="90dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_heart_iot"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Đo nhịp tim"
                                    android:layout_gravity="center"
                                    android:paddingBottom="8dp"/>
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout android:gravity="start"
                    android:id="@+id/linearOfferBanner1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_16pxv"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView android:id="@+id/txtEarlyProtection1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Bác sĩ nổi bật"
                            android:textStyle="bold"

                            android:textSize="20dp"
                            android:layout_marginStart="@dimen/_26pxh"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_listdoctor_xt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem thêm >>"
                            android:textStyle="bold"
                            android:textColor="@color/cyan_300"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_topdoctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
                <LinearLayout android:gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_18pxv"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Thuốc đặc trị"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginStart="@dimen/_26pxh"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem thêm >>"
                            android:textColor="@color/teal_200"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="5dp"
                            />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_drug"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:orientation="horizontal"/>
                </LinearLayout>
                <ImageView
                    android:layout_marginBottom="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/primary"
                    android:src="@drawable/img_bottom_dash"/>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>